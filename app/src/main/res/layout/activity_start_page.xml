<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zhi.schoolmap.StartPageActivity"
 >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/start_bg"
        android:scaleType="centerCrop"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="校园导航"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/map_bg_bottom"
        android:layout_marginTop="150dp"/>
    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="兰州财经大学陇桥学院"
        android:layout_alignParentBottom="true"
        android:textColor="@color/map_bg_bottom"
        android:gravity="center"
        android:textSize="14sp"
        android:drawableRight="@mipmap/ic_arrow_drop_down_white_24dp"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="50dp"
        android:background="@color/btn_blue"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/button"
        android:layout_toRightOf="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:background="@color/btn_blue"
        android:textColor="@color/white"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        android:text="确定"
        android:layout_alignTop="@+id/text" />
    <View
        android:id="@+id/view"
        android:layout_width="0.5dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:layout_toRightOf="@+id/text"
        android:layout_marginBottom="50dp"
        android:layout_alignParentBottom="true"
        >

    </View>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@mipmap/erweima"/>
</RelativeLayout>
